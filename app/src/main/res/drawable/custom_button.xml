<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="@color/colorAmber600" />
            <gradient android:angle="-90" android:startColor="@color/colorAmber800" android:endColor="@color/colorAmber700"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="@color/colorAmber600" />
            <solid android:color="@color/colorAmber700"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="@color/colorAmber600" />
            <gradient android:angle="-90" android:startColor="@color/colorAmber700" android:endColor="@color/colorAmber800" />
        </shape>
    </item>
</selector>