        <item name="colorPrimary600">@color/colorPrimary600</item>
        <item name="colorPrimary500">@color/colorPrimary500</item>
        <item name="colorPrimary400">@color/colorPrimary400</item>
        <item name="colorPrimary300">@color/colorPrimary300</item>
        <item name="colorPrimary200">@color/colorPrimary200</item>
        <item name="colorPrimary100">@color/colorPrimary100</item>
        <item name="colorPrimary50">@color/colorPrimary50</item>
        <item name="colorAccent">@color/colorAccent</item>
