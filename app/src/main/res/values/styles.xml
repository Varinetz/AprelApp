        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Table" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/colorPrimary600</item>
        <item name="android:paddingTop">@dimen/result_text_table_vertical</item>
        <item name="android:paddingBottom">@dimen/result_text_table_vertical</item>
    </style>

    <style name="AppTheme.Table.Key">
        <item name="android:layout_weight">.7</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:layout_marginTop">@dimen/result_text_table_vertical</item>
        <item name="android:layout_marginBottom">@dimen/result_text_table_vertical</item>
    </style>
    <style name="AppTheme.Table.Val">
        <item name="android:layout_weight">.3</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:layout_marginTop">@dimen/result_text_table_vertical</item>
        <item name="android:layout_marginBottom">@dimen/result_text_table_vertical</item>
    </style>

    <style name="AppTheme.Table.Head">
        <item name="android:layout_weight">.5</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:background">@color/colorPrimary600</item>
        <item name="android:textColor">@color/colorPrimary200</item>
    </style>

    <style name="AppTheme.Table.Row">
        <item name="android:layout_weight">.5</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:background">@color/colorPrimary600</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HorDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/colorPrimary300</item>
    </style>

    <style name="HorDivider.Sub">
        <item name="android:background">@color/colorPrimary500</item>
    </style>

    <style name="matrixText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:clickable">true</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:contextClickable">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:longClickable">false</item>
    </style>


    <!-- changes the default colours for EditTexts, including non-text elements (also works with the DatePicker -->

    <style name="appCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>


    <!-- changes the default text colour for the EditTexts -->
    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
